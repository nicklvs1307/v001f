{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for the LoyalFood SaaS survey platform.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:create": "sequelize db:create --config src/config/sequelize-config.js",
    "db:drop": "sequelize db:drop --config src/config/sequelize-config.js",
    "db:migrate": "cross-env NODE_ENV=development npx sequelize-cli db:migrate --config src/config/sequelize-config.js --migrations-path migrations",
    "db:migrate:undo": "sequelize db:migrate:undo --config src/config/sequelize-config.js --migrations-path migrations",
    "db:seed:all": "sequelize db:seed:all --config src/config/sequelize-config.js --seeders-path seeders",
    "db:generate-migration": "cross-env NODE_ENV=development npx sequelize-cli migration:generate",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "googleapis": "^160.0.0",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.3",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^2.0.22"
  }
}
